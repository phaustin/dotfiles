   PATH=/home/phil/usr_owl/bin:$PATH:.
   export PYTHONPATH=/home/phil/lib/python
#   http://defindit.com/readme_files/bash_examples.html
#   make sure you don't echo if not tty
   if [ "$(echo $- | grep -c i)" == 1 ]
   then
     echo "setting PATH for ubuntu"
   fi
else
   PATH=/home/phil/usr_centos/bin:/home/phil/usr64/bin:$PATH
